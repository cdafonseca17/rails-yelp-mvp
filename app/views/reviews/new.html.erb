<h1>Add a review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <!-- make our errors appear -->
  <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- content of the form -->
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit "add review", class: "btn btn-primary" %>
<% end %>
<p><%= link_to "Got back to homepage", restaurants_path %></p>

